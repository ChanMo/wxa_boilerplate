/* pages/integral/integral.wxss */

.integral_head{
	background-color: #FFCE58;
	padding: 0 48rpx;
	padding-bottom: 20rpx;
	height: 234rpx;
}
.integral_head text:nth-child(1){
	font-size: 24rpx;
	font-weight: 500;
	padding-top: 70rpx;
	display: block;
}
.integral_head text:nth-child(2){
	font-size: 72rpx;
	font-weight: 500;
}
.integral_box{
	position: relative;
	background-color: #ffffff;
	border-radius: 20rpx 20rpx 0 0;
	top: -20rpx;
	padding: 30rpx;
}

.integral_tab{
	display: flex;
	flex-direction: row;
}
.integral_tab navigator{
	flex: 1;
	margin: 10rpx;
	text-align: center;
	font-size: 26rpx;
  font-weight: 500;
}
.integral_tab navigator image{
	height: 100rpx;
	width: 100rpx;
	display: block;
	margin: auto;
}


/* goods */
.goods{
	margin-top: 20rpx;
}
.goods .goods_title{
	display: flex;
	flex-direction: row;
	padding: 20rpx 0;
}
.goods .goods_title image{
	height: 48rpx;
	width: 48rpx;
}
.goods .goods_title text{
	flex: 1;
	padding-left: 20rpx;
	line-height: 48rpx;
	font-size: 34rpx;
}
.goods_box{
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
}
.goods_box .goods_item{
	width: 46%;
	margin: 0 2%;
	padding-bottom: 20rpx;
	margin-bottom: 20rpx;
}
.goods_box .goods_item image{
	width: 320rpx;
	height: 320rpx;
	border-radius: 20rpx;
}
.goods_box .goods_item text:nth-child(2){
	font-size: 30rpx;
	font-weight: 500;
	line-height: 40rpx;
	display: block;
	height: 40rpx;
	overflow-x: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.goods_box .goods_item text:nth-child(3){
	font-size: 26rpx;
	font-weight: bold;
	color: #FF5500;
	line-height: 30rpx;
	padding-bottom: 20rpx;
}