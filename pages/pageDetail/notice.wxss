/* pages/notice/notice.wxss */

.notice{
	padding: 0rpx 30rpx;
}
.notice text{
	display: block;
}
.notice text:nth-child(1){
	font-size: 40rpx;
	font-weight: 500;
	padding-left: 20rpx;
}
.notice text:nth-child(2){
	font-size: 24rpx;
	padding-left: 20rpx;
	margin-top: 30rpx;
}
.notice image:nth-child(3){
	width: 690rpx;
	height: 250rpx;
	border-radius: 20rpx;
	margin: 30rpx auto;
}
.notice text:nth-child(4){
	font-size: 28rpx;
}