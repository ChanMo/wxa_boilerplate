/* pages/theOrder/theOrder.wxss */
page{
	background-color: #FFCC52;
}
.the_order{
	border-radius: 20rpx;
	width: 690rpx;
	background-color: #ffffff;
	margin: 30rpx auto;
}
/* head */
.the_store{
  border-bottom: 1rpx dashed #FFCC52;
	position: relative;
	padding: 30rpx;
}
.the_store .head_val{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.the_store .head_val text:nth-child(2){
  color: #666;
  padding-left: 20rpx;
}
.the_store view:nth-child(2){
  color: #999;
  padding-top: 10rpx;
}
.the_store view:nth-child(3){
	position: absolute;
	height: 20rpx;
	width: 20rpx;
	background-color: #FFCC52;
	border-radius: 10rpx;
	left: -10rpx;
	bottom: -10rpx;
}
.the_store view:nth-child(4){
	position: absolute;
	height: 20rpx;
	width: 20rpx;
	background-color: #FFCC52;
	border-radius: 10rpx;
	right: -10rpx;
	bottom: -10rpx;
}
/*  */
.the_head{
	border-bottom: 1rpx dashed #FFCC52;
	position: relative;
	padding: 30rpx;
	display: flex;
	flex-direction: row;
}
.the_head image{
	height: 100rpx;
	width: 100rpx;
	border-radius: 20rpx;
}
.the_head .head_val{
	position: relative;
	flex: 1;
	padding-left: 30rpx;
	display: flex;
	flex-direction: column;
}	
.the_head .head_val text:nth-child(1){
	font-size: 30rpx;
	color: #666666;
	line-height: 50rpx;
}
.the_head .head_val text:nth-child(2){
	font-size: 24rpx;
	color: #666666;
	line-height: 50rpx;
}
.the_head .head_val text:nth-child(3){
	position: absolute;
	right: 0;
	top: 32rpx;
	font-size: 30rpx;
}

/* the_ticket */
.the_ticket{
	border-bottom: 1rpx dashed #FFCC52;
	padding: 30rpx;
}
.the_ticket .ticket_order{
	display: flex;
	flex-direction: row;
}
.the_ticket .ticket_order text:nth-child(1){
	flex: 1;
	font-size: 28rpx;
	font-weight: 500;
}
.the_ticket .ticket_order text:nth-child(2){
	font-size: 24rpx;
	color: #666666;
}
.the_ticket .ticket_code{
	border: 15rpx solid #f5f1f4;
	padding: 15rpx;
	border-radius: 20rpx;
	width: fit-content;
	margin: auto;
	margin-top: 40rpx;
	margin-bottom: 40rpx;
	position: relative;
}
.the_ticket .ticket_code image{
	height: 370rpx;
	width: 370rpx;
}
.the_ticket .ticket_code text{
	position: absolute;
	background-color: #E6E3DF;
	font-size: 36rpx;
	border-radius: 20rpx;
	left: 50%;
	top: 50%;
	width: 200rpx;
	height: 80rpx;
	transform: translate(-50%,-50%);
	text-align: center;
	line-height: 80rpx;
}
/* the_order */
.the_detail{
	padding: 30rpx;
}
.the_detail .detail_title{
	font-size: 28rpx;
	font-weight: 500;
}
.the_detail .detail_item{
	padding-top: 20rpx;
}
.the_detail .detail_item view{
	display: flex;
	flex-direction: row;
	padding: 10rpx 30rpx;
}
.the_detail .detail_item view text:nth-child(1){
	font-size: 24rpx;
	flex: 4;
}
.the_detail .detail_item view text:nth-child(2){
	font-size: 24rpx;
	flex: 14;
	color: #666666;
}
.the_btn{
	height: 80rpx;
	margin: auto;
	width: 300rpx;
	background-color: #FFCC52;
	line-height: 80rpx;
	font-weight: 500;
	border-radius: 20rpx;
	margin-top: 20rpx;
	display: block;
	text-align: center;
	font-size: 30rpx;
}