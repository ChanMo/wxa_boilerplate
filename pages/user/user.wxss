/* pages/user/user.wxss */

.user_head{
	background-color: #FFCE58;
	padding: 0 30rpx;
	padding-bottom: 20rpx;
}
.user{
	display: flex;
	flex-direction: row;
	border-bottom: 1rpx solid rgba(255,255,255,0.4);
	padding: 40rpx 0;
}
.user .user_img{
	height: 100rpx;
	width: 100rpx;
	border-radius: 50rpx;
  overflow: hidden;
	background-color: #ffffff;
}
.user .user_img image{
	height: 100rpx;
	width: 100rpx;
}
.user view:nth-child(2){
	line-height: 40rpx;
	font-size: 26rpx;
	padding: 10rpx;
	padding-left: 30rpx;
	flex: 1;
}
.user view:nth-child(2) text{
	display: block;
  color: #666666;
}
.user view:nth-child(2) text:nth-child(1){
	font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}
.user view:nth-child(3){
	font-size: 30rpx;
	font-weight: 500;
	line-height: 100rpx;
  display: block;
  position: relative;
}
.user view:nth-child(3) image{
  display: inline-block;
  height: 30rpx;
  width: 30rpx;
  position: relative;
  top: 5rpx;
  margin-right: 5rpx;
}