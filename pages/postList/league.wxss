/* pages/league/league.wxss */
page{
	background-color: #fafafa;
}
.league {
	width: 630rpx;
	padding: 30rpx;
	margin: 20rpx auto;
  box-shadow: 0px 5rpx 15rpx 0rpx rgba(242, 241, 237, 1);
  border-radius: 20rpx;
	overflow: hidden;
  background-color: #ffffff;
}

/*  */

.league_top {
	display: flex;
	flex-direction: row;
}
.league_top .top_user{
	display: flex;
	flex-direction: row;
	flex: 1;
}
.league_top .top_user image{
	height: 60rpx;
	width: 60rpx;
	border-radius: 30rpx;
	background-color: #f1f1f1;
}
.league_top .top_user text{
	font-size: 28rpx;
	line-height: 60rpx;
	flex: 1;
	padding-left: 20rpx;
}
.league_top .top_time{
	display: flex;
	flex-direction: row;
}
.league_top .top_time image{
	height: 48rpx;
	width: 48rpx;
	margin-top: 6rpx;
}
.league_top .top_time text{
	font-size: 24rpx;
	line-height: 60rpx;
	color: #ADADAD;
}
/*  */
.league_center{
	padding-top: 20rpx;
}
.league_center .center_text{
  font-size: 28rpx;
}
.league_center .center_val{
	display: flex;
	flex-direction: row-reverse;
}
.center_val view,.center_val navigator{
	display: flex;
	flex-direction: row;
	margin-left: 30rpx;
}
.center_val image{
	height: 40rpx;
	width: 40rpx;
	padding-right: 10rpx;
}
.center_val {
	line-height: 40rpx;
}
/*  */
.league_bottom{
	border-top: 1rpx solid #f2f2f2;
	margin-top: 20rpx;
	padding-top: 20rpx;
	font-size: 26rpx;
}
.league_bottom view text:nth-child(2){
	color: #999999;
}
/*  */
.league_post{
	float: right;
	color: #999999;
}



/* issue */
.issue{
	height: 118rpx;
	width: 118rpx;
	position: fixed;
	right: 40rpx;
	bottom: 150rpx;
}
.issue image{
	height: 100%;
	width: 100%;
}

page{
	height: 100%;
}
.modals{
	z-index: 2000;
	position: fixed;
	top: 0;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	background-color: rgba(0,0,0,0.01);
}
.modals_back{
	flex: 1;
}
.submits{
	background-color: #fdfdfd;
	display: flex;
	flex-direction: row;
	height: 60rpx;
	width: 96%;
	padding: 0 2%;
}
.submits input{
	flex: 1;
	background-color: #F2F2F2;
	border-radius: 10rpx 0 0 10rpx;
	height: 60rpx;
	padding-left: 30rpx;
}
.submits button{
	background-color: #FFCC52;
	border-radius: 0 10rpx 10rpx 0;
	height: 60rpx;
	width: 130rpx !important;
	font-size: 24rpx;
	line-height: 60rpx;
}