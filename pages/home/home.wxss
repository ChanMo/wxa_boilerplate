/* banner */
.banner{
	height: 250rpx;
	width: 690rpx;
	margin: auto;
	position: relative;
}
.banner image{
	height: 250rpx;
	width: 690rpx;
}
.banner text{
	position: absolute;
	z-index: 1;
	right: 20rpx;
	bottom: 20rpx;
	display: block;
	height: 24rpx;
	border-radius: 12rpx;
	color: #ffffff;
	background-color: #000000;
	opacity: 0.3;
	font-size: 18rpx;
	font-weight: 500;
	text-align: center;
	line-height: 24rpx;
	padding: 0 10rpx;
}