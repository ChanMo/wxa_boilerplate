.weui-search-bar {
  position: relative;
  padding: 16rpx;
  display: flex;
  box-sizing: border-box;
  background-color: #ededed;
  -webkit-text-size-adjust: 100%;
  align-items: center;
}

.weui-icon-search {
  margin-right: 16rpx;
  font-size: 28rpx;
  vertical-align: top;
  margin-top: 0.55em;
  height: 1em;
  line-height: 1em;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 24rpx;
  top: 50%;
  margin-top: -16rpx;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 28rpx;
  vertical-align: top;
}

.weui-search-bar__form {
  position: relative;
  flex: auto;
  border-radius: 8rpx;
  background: #fff;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 64rpx;
  padding-right: 64rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
	display: flex;
}

.weui-search-bar__input {
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  caret-color: #07c160;
	flex: 1;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  padding: 16rpx 10rpx;
  font-size: 0;
}

.weui-icon-clear:after {
  content: "";
  height: 100%;
  vertical-align: middle;
  display: inline-block;
  width: 0;
  overflow: hidden;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 8rpx;
  text-align: center;
  color: rgba(0, 0, 0, 0.5);
  background: #fff;
  line-height: 64rpx;
}

.weui-search-bar__cancel-btn {
  margin-left: 16rpx;
  line-height: 64rpx;
  color: #576b95;
  white-space: nowrap;
}
